<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="eecs.primeder.HomeActivity">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Challenge Mode"
        android:id="@+id/challengeModeButton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="challengeClick"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Tips for Primes"
        android:id="@+id/tipButton"
        android:layout_below="@+id/instructionButton"
        android:layout_centerHorizontal="true"
        android:onClick="getTips"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Instructions"
        android:id="@+id/instructionButton"
        android:layout_below="@+id/suddenDeathButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Options"
        android:id="@+id/optionButton"
        android:layout_below="@+id/tipButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Sudden Death"
        android:id="@+id/suddenDeathButton"
        android:layout_below="@+id/timedModeButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Timed Mode"
        android:id="@+id/timedModeButton"
        android:layout_below="@+id/challengeModeButton"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
